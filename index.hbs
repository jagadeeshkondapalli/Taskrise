<p style="margin-bottom: 7rem"></p>

<a class="btn btn--add_task" href="/todo/add">Create +
</a>
<hr />
{{#if todos.length}}
    <ul>
        {{#each todos}}
            <div class="card card-body mb-2" style="border: none">
                {{#if pending}}
                    <div class="task-title task-title-pending">
                        <h4 style="color: #fff; ">{{title}}</h4>
                    </div>
                {{else}}
                    <div class="task-title">
                        <h4 style="color: #fff; ">{{title}}</h4>
                    </div>
                {{/if}}

                <div class="task-details">
                    <div
                        style="display: flex; flex-direction: column; width: 80%; gap: 1rem"
                    >
                        <ul style="list-style: none;">
                            <li><span
                                    style="font-weight: bold;"
                                >Description</span>:
                                {{description}}</li>
                        </ul>
                        <ul><span
                                style="justify-self: flex-end; font-weight: bold;"
                            >Due date and time</span>:
                            {{dueDate}}
                            and
                            {{dueTime}}</ul>
                    </div>

                    <div
                        style="display: flex; flex-direction: column; min-width: 10%; max-width: 20%; width: auto; gap: 0; border-left: 0.5px solid #333; padding-left: 2rem"
                    >
                        <a class="btn btn-dark mb-2" href="/todo/edit:{{_id}}">
                            Edit Task
                        </a>
                        <form action="/todo/delete" method="POST">

                            <input type="hidden" value="{{_id}}" name="id" />
                            <button
                                class="btn btn-danger mb-2 deleteTask"
                                type="submit"
                            >Delete Task</button>
                        </form>
                        <br />
                        <form action="/todo/complete" method="POST">
                            <input
                                type="hidden"
                                name="idTodo"
                                value="{{this._id}}"
                            />
                            <button
                                class="btn btn-success finish"
                                type="submit"
                                style="width: 12rem"
                            >Finish</button>
                        </form>

                    </div>
                </div>

            </div>
            <hr />
        {{/each}}

    </ul>
{{else}}
    <p>No tasks Yet!</p>
{{/if}}