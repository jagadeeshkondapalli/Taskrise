<p style="margin-bottom: 13rem"></p>
<h3 style="text-align: center;">Pomodoro Timer</h3>
<div class="pomodoro">
    <p id="work" class="label">Work:</p>
    <p id="break" class="label">Break:</p>
    <p id="cycles" class="label">Cycles:</p>
    <!--Work Timer-->
    <div id="work-timer" class="timer">
        <p id="w_minutes">25</p>
        <p class="semicolon">:</p>
        <p id="w_seconds">00</p>
    </div>

    <!--Cycle Counter-->
    <p class="timer counter">0</p>

    <!--Break Timer-->
    <div id="break-timer" class="timer">
        <p id="b_minutes">5</p>
        <p class="semicolon">:</p>
        <p id="b_seconds">00</p>
    </div>
    <button id="start" class="btn100">Start</button>
    <button id="reset" class="btn100">Reset</button>
    <button id="finish" class="btn100">Finish</button>
</div>