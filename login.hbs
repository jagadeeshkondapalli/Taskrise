<div class="row justify-content-md-center">
    <div class="col-md-6">
        <p style="margin-bottom: 13rem"></p>
        <h2 style="margin-bottom: 3rem; text-align: center">
            Unleash your
            <span class="highlight">productivity</span>
            potential: Login now.
        </h2>
        {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                <pre>{{message}}</pre>
            </div>
        {{/if}}

        <form
            method="POST"
            action="/users/login"
            style="background-color: #eef; padding: 1rem; border-radius: 1rem"
        >
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input
                    name="email"
                    type="email"
                    class="form-control"
                    id="exampleInputEmail1"
                    placeholder="Enter email"
                    required
                />
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input
                    name="password"
                    type="password"
                    class="form-control"
                    id="exampleInputPassword1"
                    placeholder="Password"
                    required
                />
            </div>
            <button
                type="submit"
                class="btn btn-dark login_button"
            >Login</button>
        </form>
        <div>
            <p> </p>
            <p>Don't have an account?
                <a class="" href="/users/register">Register Now</a></p>

        </div>
    </div>
</div>